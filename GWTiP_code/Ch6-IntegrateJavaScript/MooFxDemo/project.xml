<?xml version="1.0" encoding="UTF-8"?>
<project>
	<pomVersion>3</pomVersion>
	<artifactId>gwt-moo.fx-demo</artifactId>
	<groupId>com.manning.gwtip</groupId>
	<id>moo.fx.demo</id>
	<currentVersion>1.0.0</currentVersion>
	<name>Moo.fx Demo for GWT</name>
	<package>com.manning.gwtip.moofx</package>
	<inceptionYear>2006</inceptionYear>		
	<build>
		<sourceDirectory>src/main/java</sourceDirectory>
		<resources>
			<!--  include java source for GWT module distribution -->
			<resource>
				<directory>${basedir}/src/main/java</directory>
			</resource>
			<resource>
				<directory>${basedir}/src/main/resources</directory>
			</resource>
		</resources>		
	</build>		
	<dependencies>
		<dependency>
			<groupId>com.google.gwt</groupId>
			<artifactId>gwt-user</artifactId>
			<version>1.4.60</version>
			<type>jar</type>
		</dependency>		
		<dependency>
			<groupId>com.manning.gwtip</groupId>
			<artifactId>gwt-moo.fx</artifactId>
			<version>1.0.0</version>
			<type>jar</type>
		</dependency>		
		
		<!--  plugins included as type plugin so they are auto downloaded -->
		<dependency>
			<groupId>com.totsp.gwt</groupId>
			<artifactId>maven-googlewebtoolkit-plugin</artifactId>
			<version>1.5.6</version>
			<type>plugin</type>
		</dependency>		
	</dependencies>	
</project>

